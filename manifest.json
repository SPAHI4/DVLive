{
	"manifest_version": 2,

	"name": "Pomgoo LIVE",
	"description": "Provides a notification when Pomgoo is live on Twitch.tv!",
	"version": "0.2.0",

	"permissions": [
		"https://api.twitch.tv/",
		"notifications"
	],

	"web_accessible_resources": [
		"icon.png"
	],

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "icon.png",
        "48": "icon.png",
        "128": "icon.png" 
    },
    "background": {
    	"scripts": ["jquery-latest.min.js", "background.js"]
    }
}